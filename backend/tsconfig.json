{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["dom", "esnext"],  
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "types": ["node", "./src/types/express.d.ts"],
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*", "src/types/express.d.ts"],  // âœ… Include your custom type
  "exclude": ["node_modules"]
}
